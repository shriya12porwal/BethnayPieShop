@using BethanyWorkShop.ViewModel
@model StudentWithCount

<html>
    <head>
         <meta charset="utf-8">
          <meta name="viewport" content="width=device-width, initial-scale=1">
          <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>
    <body>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Age</th>
              <th scope="col">Team Name</th>
            </tr>
          </thead>
          
            <tbody>
            @foreach(var student in Model.students)
            {

                <tr>
                   <td><a asp-action="Details" asp-route-id="@student.StudentID">@student.FirstName</a></td>

                    <td>@student.LastName</td>
                    <td>@student.Age </td>
                    <td>@student.TeamName</td>
                     <td><a asp-action="Remove" asp-route-id="@student.StudentID">Remove</a></td>
                </tr>                  

            } 
           
            </tbody>
        </table>
         <h5>
             
                Total Student Count ->  @Model.count
            </h5>
    <div>
        <a asp-action="Create"> Create</a><br />
    </div>
    </body>
</html>
